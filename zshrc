# export EDITOR="vim"

# enable command completion
autoload -U compinit
compinit

# enable coloured prompt
autoload -U promptinit
promptinit
prompt walters # use walters theme

alias pd="pushd" #use this with popd
# alias open xdg-open
# alias sicstus "rlwrap sicstus"
alias xterm="xterm -bg black -fg white"
alias ll="ls -lh"

